<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="WebResMapper">
	<!-- 添加信息 -->
	<insert id="insert" parameterType="pd">
		insert into sys_website(
			website_id,
			name
		)values(
			#{website_id},
			#{name}
		)
	</insert>
	<!-- 列表一页的信息 -->
	<select id="getlistPage" parameterType="page" resultType="pd" useCache="false">
		select  *
		from sys_website
		<where>
		 	<if test="pd.searchName!=null and pd.searchName!=''">
		 		name LIKE CONCAT(CONCAT('%', #{pd.searchName}),'%')
		 	</if>
		 </where>
	</select>
	<!-- 查询所有的信息 -->
	<select id="getlistAll" parameterType="pd" resultType="pd" useCache="false">
		select 
			*
		 from sys_website
	</select>
	<!-- 根据ID查询指定信息 -->
	<select id="getById" parameterType="pd" resultType="pd">
		select
			*
		from sys_website 
			where website_id=#{website_id}
	</select>
	
	<!-- 根据 name查询，判断是否已经存在-->
	<select id="getByName" parameterType="pd" resultType="pd">
		select
			*
		from sys_website 
			where name=#{name}
	</select>
	
	<!-- 更新指定的信息 -->
	<update id="update" parameterType="pd">
		update sys_website
			set
				name=#{name}
			where website_id=#{website_id}
	</update>
	<!-- 删除指定的信息 -->
	<delete id="delete" parameterType="pd">
		delete from sys_website where website_id=#{website_id}
	</delete>
	<delete id="delete1" parameterType="pd">
		delete from sys_channel where website_id=#{website_id}
	</delete>
	<!-- 批量删除信息 -->
	<delete id="deleteAll" parameterType="String" flushCache="false">
		delete from sys_website
		where
			website_id in
			<foreach collection="array" item="item" index="index" open="(" separator="," close=")">
				#{item}
			</foreach>
	</delete>
</mapper>